<h1>Usew</h1>
<table class= "table table-striped">

  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Created at:</th>
      <th>Properties:</th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
    <tr>

    <td><%= account.full_name %></td>
    <td><%= account.email %></td>
    <td><%= account.created_at.strftime("%d/%m/%Y") %></td>
    <td>
      <div class="dropstart">
      <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        View
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <% account.properties.each do |property| %>
          <li>
            <%= link_to property, class:"text-decoration-none" do %>
            <div class="dropdown-item d-flex flex-row align-items-center">
            <%= property.name %>
            <%= link_to 'Edit', edit_property_path(property), class: "btn btn-outline-primary btn-sm mr-3" %>
            <%= button_to 'Destroy', property, method: :delete,  form: {data: {turbo_confirm: 'Are you sure?'}}, class: "btn btn-outline-danger btn-sm"  %>
            </div>
            <% end %>
          </li>
          <% end %>
      </ul>
    </div>
</td>



    </tr>
    <% end %>
  </tbody>
</table>
