<% @properties.each do |property| %>

<div class="col">
  <div class="card shadow-sm">

    <div class="bd-placeholder-img card-img-top" width="100%" height="225" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
      <% if property.image.present? %>
      <%= image_tag property.image.thumb.url, class:"bd-placeholder-img card-img-top"%>
      <% else %>
      <%= image_tag "placeholder.jpg" %>
      <% end %>
    </div>

    <div class="card-body">
      <h5 class="card-text"><%= property.name %></h5>
      <h6 class="card-text"><%= property.address %></h6>
      <h6 class="card-text">Price: <%= property.price %></h6>

      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
        </div>
        <small class="text-muted"><%= property.created_at %></small>
      </div>
    </div>
  </div>
</div>







<% end %>
