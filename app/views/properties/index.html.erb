<p style="color: green"><%= notice %></p>

<h1>Properties</h1>


<table class= "table table-striped">

  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Address</th>
      <th>Price</th>
      <th>Area</th>
      <th>Rooms</th>
      <th>Bathrooms</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @properties.each do |property| %>
    <tr>
    <% if property.account_id == current_account.id %>
    <td><%= property.kind %></td>
    <td><%= property.name %></td>
    <td><%= property.address %></td>
    <td><%= number_to_currency(property.price, precision: 0) %></td>
    <td><%= property.area %></td>
    <td><%= property.rooms %></td>
    <td><%= property.bathrooms %></td>
    <td><%= link_to 'Show', property, class: "btn btn-outline-primary btn-sm" %></td>
    <td><%= link_to 'Edit', edit_property_path(property), class: "btn btn-outline-primary btn-sm" %></td>
    <td><%= button_to 'Destroy', property, method: :delete,  form: {data: {turbo_confirm: 'Are you sure?'}}, class: "btn btn-outline-danger btn-sm"  %></td>
    </tr>
<% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Property', new_property_path, class: "btn btn-primary" %>
